{% extends 'base.html.twig' %}
{% block add_button %}
    <a href="{{ path('app_add_invoice')}}" style="text-decoration: none; color: #FFFFFF"><img src="{{ asset('icons/icons8-plus.svg') }}"></a>
{% endblock %}
{% block main %}
    <h1 style="text-align: center">Накладные</h1>
    <div class = 'grid'>
        <table>
            <tr>
                <th>id</th>
                <th>Номер накладной</th>
                <th>Тип</th>
            </tr>
            {% if items != null %}
                {% for item in items %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.number }}</td>
                        <td>{{ item.type }}</td>
                    </tr>
                {% endfor %}
            {% endif %}
        </table>
    </div>
{% endblock %}