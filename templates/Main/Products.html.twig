{% extends 'base.html.twig' %}
{% block add_button %}
    <a href="{{ path('app_add_item')}}" style="text-decoration: none; color: #FFFFFF"><img src="{{ asset('icons/icons8-plus.svg') }}"></a>
{% endblock %}
{% block main %}
    <h1 style="text-align: center">Товары</h1>
    <div class = 'grid'>
        <table>
            <tr>
                <th>id</th>
                <th>Наименование товара</th>
                <th>Цена за единицу</th>
                <th> </th>
                <th> </th>
            </tr>
            {% if items != null %}
                {% for item in items %}
                    {% if item.isDeleted == false %}
                        <tr>
                            <td>{{ item.id }}</td>
                            <td>{{ item.name }}</td>
                            <td>{{ item.price }}</td>
                            <td style="width: 15px">
                                <a href="{{ path('app_delete_item', {'item_id':item.id}) }}">
                                    <img src = "{{ asset('icons/free-icon-font-cross-3917189.svg') }}" width="20px" height="30px">
                                </a>
                            </td>
                            <td style="width: 15px">
                                <a href="{{ path('app_edit_item', {"item_id": item.id}) }}">
                                    <img src = "{{ asset('icons/free-icon-font-pencil-3917376.svg') }}" width="20px" height="20px">
                                </a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            {% endif %}
        </table>
    </div>
{% endblock %}